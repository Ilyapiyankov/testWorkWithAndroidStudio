<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_margin="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:padding="2dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"

            android:background="@drawable/textborder"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"

            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="введите название продукта"
            />

        <EditText
            android:textAlignment="center"
            android:hint="сюда"
            android:id="@+id/nameOfProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp" />
        <!---->
        <TextView
            android:background="@drawable/textborder"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="85dp"

            android:inputType="text"

            android:text="дата поступления" />

        <EditText
            android:hint="сюда"
            android:textAlignment="center"
            android:id="@+id/dateOfAdding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="105dp"
            />
        <!---->
        <TextView
            android:background="@drawable/textborder"
            android:layout_centerHorizontal="true"

            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="155dp"
            android:text="количество" />

        <EditText
            android:hint="сюда"
            android:textAlignment="center"
            android:id="@+id/numberInStock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="175dp"
            android:inputType="number"
            />
        <!---->
        <TextView
            android:textAlignment="center"
            android:background="@drawable/textborder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="235dp"
            android:text="стоимость 1 ед товара" />

        <EditText
            android:hint="сюда"
            android:textAlignment="center"
            android:id="@+id/priceForOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="255dp"
            android:inputType="numberDecimal"
            />
        <!---->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Добавить продукт"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="320dp"
            android:onClick="addProduct"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="450dp"
            android:text="Поиск продукта"
            android:onClick="search"
            />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>